@using TechXpress_DepiGraduation.Data.ViewModel
@model LoginViewModel

@{
    Layout = "_Layout";
    ViewData["Title"] = "Login";
}


<div class="login-page">
    <div class="login-box">
        <h2 class="login-title">
            <i class="fas fa-sign-in-alt"></i>
            Welcome Back
        </h2>

        <form asp-action="Login" asp-controller="Account" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger text-center mb-3"></div>

            <div class="mb-4">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control" autocomplete="off" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Password" class="form-label">Password</label>
                <div class="input-group">
                    <input asp-for="Password" class="form-control" type="password" id="password" autocomplete="off" />
                    <i class="fas fa-eye password-toggle" id="togglePassword"></i>
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-login">
                    Sign In <i class="fas fa-arrow-right ms-2"></i>
                </button>
            </div>

            <a asp-action="Register" class="register-link">
                Don't have an account? <strong>Join Now</strong>
            </a>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script>
        const togglePassword = document.querySelector('#togglePassword');
        const password = document.querySelector('#password');

        togglePassword.addEventListener('click', function(e) {
            const type = password.getAttribute('type') === 'password' ? 'text' : 'password';
            password.setAttribute('type', type);
            this.classList.toggle('fa-eye-slash');
        });

        const loginBox = document.querySelector('.login-box');
        loginBox.addEventListener('mouseenter', () => {
            loginBox.style.transform = 'translateY(-5px)';
        });
        loginBox.addEventListener('mouseleave', () => {
            loginBox.style.transform = 'translateY(0)';
        });
    </script>
}