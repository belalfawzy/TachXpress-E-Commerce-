@using TechXpress_DepiGraduation.Data.ViewModel
@model LoginViewModel

@{
    Layout = "_Layout";
    ViewData["Title"] = "Login";
}

<!-- Custom style for login -->
<style>
    body {
        font-family: 'Segoe UI', sans-serif;
    }

    .login-wrapper {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 90vh;
    }

    .login-box {
        background-color: #fff;
        padding: 3rem 2.5rem;
        border-radius: 12px;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 420px;
    }

    .login-title {
        font-size: 2rem;
        font-weight: 700;
        color: #a277a6;
        text-align: center;
        margin-bottom: 1.5rem;
    }

    .form-label {
        font-weight: 500;
        color: #555;
    }

    .form-control {
        border-radius: 8px;
        box-shadow: none !important;
    }

    .btn-login {
        background-color: #a277a6;
        color: white;
        border: none;
        border-radius: 8px;
        width: 100%;
        padding: 0.6rem;
        font-weight: 600;
        transition: background-color 0.3s ease;
    }

    .btn-login:hover {
        background-color: #8b5fa3;
    }

    .register-link {
        display: block;
        text-align: center;
        margin-top: 1rem;
        color: #6c757d;
        font-size: 0.95rem;
    }

    .register-link:hover {
        text-decoration: underline;
        color: #a277a6;
    }
</style>

<div class="container login-wrapper">
    <div class="login-box">
        <h2 class="login-title"><i class="fas fa-sign-in-alt me-2"></i>Login</h2>

        <form asp-action="Login" asp-controller="Account" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger text-center mb-3"></div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control" autocomplete="off" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label">Password</label>
                <input asp-for="Password" class="form-control" type="password" autocomplete="off" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-login" />
            </div>

            <a asp-action="Register" class="register-link">Don't have an account? Register here</a>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}