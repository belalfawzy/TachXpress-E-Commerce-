@using TechXpress_DepiGraduation.Data.ViewModel
@model RegisterViewModel

@{
    Layout = "_Layout";
    ViewData["Title"] = "Register";
}

<!-- Style for Register Page -->
<style>
    body {
        background-color: #f4f6f8;
        font-family: 'Segoe UI', sans-serif;
    }

    .register-wrapper {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 90vh;
    }

    .register-box {
        background-color: #fff;
        padding: 3rem 2.5rem;
        border-radius: 16px;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.05);
        width: 100%;
        max-width: 500px;
    }

    .register-title {
        font-size: 1.75rem;
        font-weight: 600;
        color: #a277a6;
        text-align: center;
        margin-bottom: 2rem;
        letter-spacing: 1px;
    }

    .form-label {
        font-size: 0.85rem;
        font-weight: 600;
        color: #555;
        margin-bottom: 5px;
        text-transform: uppercase;
    }

    .form-control {
        border-radius: 8px;
        height: 45px;
        font-size: 0.95rem;
    }

    .btn-register {
        background-color: #a277a6;
        color: white;
        border-radius: 30px;
        padding: 0.6rem 1.5rem;
        width: 100%;
        font-weight: 600;
        font-size: 1rem;
        border: none;
        transition: 0.3s;
    }

        .btn-register:hover {
            background-color: #8b5fa3;
        }

    .login-link {
        display: block;
        text-align: center;
        margin-top: 1rem;
        color: #6c757d;
        font-size: 0.95rem;
    }

        .login-link:hover {
            text-decoration: underline;
            color: #a277a6;
        }
</style>

<div class="container register-wrapper">
    <div class="register-box">
        <h2 class="register-title"><i class="fas fa-user-plus me-2"></i>Sign Up</h2>

        <form asp-action="Register" asp-controller="Account" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger text-center mb-3"></div>

            <div class="mb-3">
                <label asp-for="FullName" class="form-label">Full Name</label>
                <input asp-for="FullName" class="form-control" autocomplete="off" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control" autocomplete="off" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="PhoneNumber" class="form-label">Phone</label>
                <input asp-for="PhoneNumber" class="form-control" autocomplete="off" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label">Password</label>
                <input asp-for="Password" class="form-control" type="password" autocomplete="off" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                <input asp-for="ConfirmPassword" class="form-control" type="password" autocomplete="off" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Sign Up" class="btn btn-register" />
            </div>

            <a asp-action="Login" class="login-link">Already have an account? Login</a>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}