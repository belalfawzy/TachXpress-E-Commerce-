@model List<TechXpress_DepiGraduation.Models.AppUser>

@{
    ViewData["Title"] = "Users";
    var userRoles = ViewBag.UserRoles as Dictionary<string, List<string>>;
}

<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">All Registered Users</h3>
        </div>
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <table class="table table-bordered table-striped">
                    <thead class="table-light">
                        <tr>
                            <th>Full Name</th>
                            <th>User Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Roles</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.FullName</td>
                                <td>@user.UserName</td>
                                <td>@user.Email</td>
                                <td>@user.PhoneNumber</td>
                                <td>
                                    @if (userRoles != null && userRoles.ContainsKey(user.Id))
                                    {
                                        foreach (var role in userRoles[user.Id])
                                        {
                                            <span>@role</span>
                                        }
                                    }
                                    else
                                    {
                                        <span class="text-muted">No role</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-info text-center">
                    No users found.
                </div>
            }
        </div>
    </div>
</div>