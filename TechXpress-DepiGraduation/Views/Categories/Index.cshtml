@model IEnumerable<Category>

@{
    ViewData["Title"] = "Categories";
}


<div class="row">
    <h2 class=" text-center">Categories</h2>

    <div class="col-md-9 offset-md-2">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model)
                {
                    <tr>
                        <td>@category.Name</td>
                        <td>@category.Description</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-outline-info"><i class="fas fa-regular fa-pencil mr-2"></i></a>
                            <a asp-action="Details" asp-route-id="@category.Id" class="btn btn-outline-secondary"><i class="fas fa-regular fa-eye mr-2"></i></a>
                            <form asp-action="Delete" asp-route-id="@category.Id" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this category?');">
                                <button type="submit" class="btn btn-outline-danger" title="Delete">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
</div>
</div>

<div class="d-flex justify-content-end mt-3">
    <a asp-action="Create" class="btn btn-outline-success">
        <i class="fas fa-plus-circle"></i> Create New
    </a>
</div>




