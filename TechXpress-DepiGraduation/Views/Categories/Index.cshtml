@model IEnumerable<Category>

@{
    Layout = "_Layout";
    ViewData["Title"] = "Categories";
}

<h2 class="mb-4" style="color: #2D2D2D;">
    <i class="fa fa-box"></i>
    Categories</h2>
@if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
{
    <div class="mb-4 text-end">
        <a asp-action="Create" class="btn" style="background-color: #a277a6;">
            <i class="fas fa-plus-circle me-2"></i> Add New
        </a>
    </div>
}
<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    @foreach (var category in Model)
    {
        <div class="col" id="category-@category.Id">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title" style="color: #1B1B1B;">@category.Name</h5>
                    <p class="card-text text-muted">@category.Description</p>
                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-sm" style="background-color: #EDEDED; color: #2D2D2D;">
                                <i class="fas fa-pen"></i>
                            </a>
                            <a asp-action="Details" asp-route-id="@category.Id" class="btn btn-sm" style="background-color: #EDEDED; color: #2D2D2D;">
                                <i class="fas fa-eye"></i>
                            </a>
                            <form asp-action="Delete" asp-route-id="@category.Id" method="post" onsubmit="return confirmDelete(event, @category.Id)" style="display:inline;">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-sm"  style="background-color: #FFEEEE; color: #E63946;">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </form>
                        </div>
                    }
                </div>
            </div>
        </div>
    }
</div>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    function confirmDelete(event, id) {
        event.preventDefault(); 

        Swal.fire({
            title: "Are you sure?",
            text: "You won't be able to revert this!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Yes, delete it!"
        }).then((result) => {
            if (result.isConfirmed) {
              
                const form = event.target;

                $.ajax({
                    url: form.action,
                    type: 'POST',
                    data: $(form).serialize(),
                    success: function (response) {
                        $(`#category-${id}`).remove();
                        Swal.fire({
                            title: "Deleted!",
                            text: "Your Category has been deleted.",
                            icon: "success"
                        })
                    },
                    error: function (xhr, status, error) {
                        Swal.fire({
                            title: "Error!",
                            text: "An error occurred while deleting the Category.",
                            icon: "error"
                        });
                    }
                });
            }
        });

        return false; 
    }
</script>


