@model IEnumerable<Category>

@{
    Layout = "_Layout";
    ViewData["Title"] = "Categories";
}

<h2 class="mb-4" style="color: #2D2D2D;">
    <i class="fa fa-box"></i>
    Categories</h2>
@if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
{
    <div class="mb-4 text-end">
        <a asp-action="Create" class="btn" style="background-color: #a277a6;">
            <i class="fas fa-plus-circle me-2"></i> Add New
        </a>
    </div>
}
<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    @foreach (var category in Model)
    {
        <div class="col">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title" style="color: #1B1B1B;">@category.Name</h5>
                    <p class="card-text text-muted">@category.Description</p>
                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-sm" style="background-color: #EDEDED; color: #2D2D2D;">
                                <i class="fas fa-pen"></i>
                            </a>
                            <a asp-action="Details" asp-route-id="@category.Id" class="btn btn-sm" style="background-color: #EDEDED; color: #2D2D2D;">
                                <i class="fas fa-eye"></i>
                            </a>
                            <form asp-action="Delete" asp-route-id="@category.Id" method="post" onsubmit="return confirm('Are you sure?')" style="display:inline;">
                                <button type="submit" class="btn btn-sm" style="background-color: #FFEEEE; color: #E63946;">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </form>
                        </div>
                    }
                </div>
            </div>
        </div>
    }
</div>



