@model TechXpress_DepiGraduation.Data.ViewModel.ContactUsViewModel

@{
    Layout = "_Layout";
    ViewData["Title"] = "Contact Us";
}

<div class="container py-5">
    <!-- Page Header -->
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold text-dark">Get in Touch</h1>
        <p class="lead text-muted">We'd love to hear from you! Reach out with any questions or inquiries.</p>
    </div>

    <!-- Contact Section -->
    <div class="row g-5">
        <!-- Contact Form -->
        <div class="col-md-6">
            <h3 class="mb-4 text-dark">Send Us a Message</h3>
            @if (TempData["Message"] != null)
            {
                <div class="alert alert-success" role="alert">
                    @TempData["Message"]
                </div>
            }
            <form asp-action="Index" asp-controller="Contact" method="post">
                <div class="mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" placeholder="Your Name" required />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control" placeholder="Your Email" required />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Subject" class="form-label"></label>
                    <input asp-for="Subject" class="form-control" placeholder="Subject" required />
                    <span asp-validation-for="Subject" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Message" class="form-label"></label>
                    <textarea asp-for="Message" class="form-control" rows="5" placeholder="Your Message" required></textarea>
                    <span asp-validation-for="Message" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-purple">Submit</button> 
            </form>
        </div>

        <!-- Contact Info -->
        <div class="col-md-6">
            <h3 class="mb-4 text-dark">Contact Information</h3>
            <ul class="list-unstyled contact-info">
                <li class="mb-3">
                    <i class="fas fa-map-marker-alt me-2 text-primary"></i>
                    123 Tech Street, Cairo, Egypt
                </li>
                <li class="mb-3">
                    <i class="fas fa-envelope me-2 text-primary"></i>
                    <a href="mailto:support@techxpress.com" class="text-dark">support@techxpress.com</a>
                </li>
                <li class="mb-3">
                    <i class="fas fa-phone-alt me-2 text-primary"></i>
                    <a href="tel:+201234567890" class="text-dark">+20 123 456 7890</a>
                </li>
                <li class="mb-3">
                    <i class="fas fa-globe me-2 text-primary"></i>
                    Follow us on:
                    <a href="https://www.facebook.com" class="text-primary ms-2"><i class="fab fa-facebook-f"></i></a>
                    <a href="https://www.twitter.com" class="text-primary ms-2"><i class="fab fa-twitter"></i></a>
                    <a href="https://www.instagram.com" class="text-primary ms-2"><i class="fab fa-instagram"></i></a>
                </li>
            </ul>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/Contact.css" asp-append-version="true" />
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}