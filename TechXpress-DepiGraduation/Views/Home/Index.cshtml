@model IEnumerable<Product>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Products";
}
<!DOCTYPE html>
<html>
<head>
    <title>TechXpress</title>
   
</head>
<body>
    <div class="container py-4">

        <div class="hero">
            <h1><i class="fas fa-tags me-2"></i>Discounts up to 50%</h1>
            <p>Explore the latest tech deals and save big on top products!</p>
            <a asp-controller="Product" asp-action="Index" class="btn">Discover All Products</a>
        </div>

        <h2 class="mb-4">Featured Products</h2>

        <div class="carousel-wrapper">
            <i class="fas fa-chevron-left arrow-btn arrow-left" onclick="scrollCarousel(-1)"></i>
            <i class="fas fa-chevron-right arrow-btn arrow-right" onclick="scrollCarousel(1)"></i>

            <div class="product-carousel" id="carousel">
                @foreach (var p in Model)
                {
                    <a asp-controller="Product" asp-action="Details" asp-route-id="@p.Id" class="product-card text-decoration-none">
                        <img src="@p.Image[0]" alt="@p.Name" class="product-img" />
                        <div class="product-body">
                            <div class="product-title">@p.Name</div>
                            <div class="product-desc">@(string.Join(" ", p.Description.Split(' ').Take(15)))...</div>
                            <div class="product-price">$@p.Price</div>
                        </div>
                    </a>
                }

                <a asp-controller="Product" asp-action="Create" class="product-card add-card text-decoration-none">
                    <i class="fas fa-plus"></i>
                </a>
            </div>
        </div>
    </div>

    <script>
        function scrollCarousel(direction) {
            const carousel = document.getElementById('carousel');
            const scrollAmount = 300;
            carousel.scrollBy({ left: direction * scrollAmount, behavior: 'smooth' });
        }
    </script>
</body>
</html>