@model AddressView
@{
ViewData["Title"] = "Enter Address";
Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background: linear-gradient(135deg, #f9f3fb 0%, #e8e3f0 100%); /* Gradient purple background */
        font-family: 'Poppins', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        color: #2d1b3f; /* Deep purple for text */
        margin: 0;
        padding: 0;
        line-height: 1.6;
    }

    .container {
        max-width: 1100px;
        margin: 0 auto;
        padding: 50px 20px;
    }

    h3 {
        font-size: 2.5rem;
        color: #3b2060; /* Rich purple for headings */
        text-align: center;
        margin-bottom: 40px;
        font-weight: 700;
        letter-spacing: -0.5px;
        animation: fadeIn 0.8s ease-in-out;
    }

    h4 {
        font-size: 1.3rem;
        color: #3b2060;
        margin-bottom: 20px;
        font-weight: 600;
    }

    .address-card {
        background: #ffffff;
        border-radius: 16px;
        padding: 30px;
        box-shadow: 0 6px 20px rgba(162, 119, 166, 0.15); /* Soft purple shadow */
        transition: transform 0.4s ease, box-shadow 0.4s ease;
        margin-bottom: 30px;
        animation: fadeIn 0.6s ease-in-out;
    }

    .address-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 14px 30px rgba(162, 119, 166, 0.25); /* Stronger purple shadow on hover */
    }

    .form-group {
        margin-bottom: 25px;
    }

    .form-control {
        border: 1px solid #d3c1db;
        border-radius: 8px;
        padding: 12px;
        font-size: 1rem;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
        background: #fdfbff; /* Slightly off-white */
    }

    .form-control:focus {
        border-color: #a277a6;
        box-shadow: 0 0 8px rgba(162, 119, 166, 0.3);
        outline: none;
    }

    .form-check {
        margin-bottom: 15px;
    }

    .form-check-label {
        color: #2d1b3f;
        font-size: 1rem;
        cursor: pointer;
    }

    .form-check-input {
        margin-right: 10px;
    }

    .btn-primary {
        background: #a277a6; /* Given purple */
        border: none;
        border-radius: 8px;
        padding: 12px 30px;
        font-size: 1.05rem;
        font-weight: 600;
        transition: background 0.3s ease, transform 0.3s ease;
        width: 100%;
    }

    .btn-primary:hover {
        background: #8b5b8f; /* Darker purple on hover */
        transform: translateY(-2px);
    }

    .alert {
        background: #f7eef9;
        color: #3b2060;
        padding: 20px;
        border-radius: 10px;
        text-align: center;
        font-size: 1.05rem;
        border: 1px solid #d3c1db;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
        margin-bottom: 30px;
    }

    .text-danger {
        font-size: 0.9rem;
        margin-top: 5px;
    }

    /* Animations */
    @@keyframes fadeIn {
         from {
             opacity: 0;
             transform: translateY(20px);
         }
         to {
             opacity: 1;
             transform: translateY(0);
         }
     }
</style>

<div class="container">
    <h3>Delivery Details</h3>

    @if (TempData["Error"] != null)
    {
    <div class="alert" role="alert">@TempData["Error"]</div>
    }

    @if (@ViewBag.Addresses != null )
    {
    <div class="address-card">
        <h4>Choose an existing address:</h4>
        <form asp-controller="Payment" asp-action="EnterAddress" method="post">
            <input type="hidden" name="PaymentMethod" value="@TempData["PaymentMethod"]" />
            @foreach (var address in @ViewBag.Addresses)
            {
            <div class="form-check">
                <label class="form-check-label">
                    <input type="radio" class="form-check-input" name="SelectedAddressId" value="@address.Id" required aria-label="Select address: @address.Street, @address.City" />
                </label>
            </div>
            }
            <button type="submit" class="btn btn-primary mt-3">Use Selected Address</button>
        </form>
    </div>
    }

    <div class="address-card">
        <h4>Or enter a new address:</h4>
        <form asp-controller="Payment" asp-action="EnterAddress" method="post">
            <input type="hidden" name="PaymentMethod" value="@TempData["PaymentMethod"]" />
            <div class="form-group">
                <label asp-for="Street"></label>
                <input asp-for="Street" class="form-control" aria-label="Street address" />
                <span asp-validation-for="Street" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="City"></label>
                <input asp-for="City" class="form-control" aria-label="City" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Country"></label>
                <input asp-for="Country" class="form-control" aria-label="Country" />
                <span asp-validation-for="Country" class="text-danger"></span>
            </div>
           
            <button type="submit" class="btn btn-primary">Submit New Address</button>
        </form>
    </div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}