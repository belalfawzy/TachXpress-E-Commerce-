@model dynamic
@{
ViewData["Title"] = "Select Payment Method";
Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background: linear-gradient(135deg, #f9f3fb 0%, #e8e3f0 100%); /* Gradient purple background */
        font-family: 'Poppins', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        color: #2d1b3f; /* Deep purple for text */
        margin: 0;
        padding: 0;
        line-height: 1.6;
    }

    .container {
        max-width: 1100px;
        margin: 0 auto;
        padding: 50px 20px;
    }

    h2 {
        font-size: 2.5rem;
        color: #3b2060; /* Rich purple for headings */
        text-align: center;
        margin-bottom: 40px;
        font-weight: 700;
        letter-spacing: -0.5px;
        animation: fadeIn 0.8s ease-in-out;
    }

    .payment-form-card {
        background: #ffffff;
        border-radius: 16px;
        padding: 30px;
        box-shadow: 0 6px 20px rgba(162, 119, 166, 0.15); /* Soft purple shadow */
        transition: transform 0.4s ease, box-shadow 0.4s ease;
        max-width: 500px;
        margin: 0 auto;
        animation: fadeIn 0.6s ease-in-out;
    }

    .payment-form-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 14px 30px rgba(162, 119, 166, 0.25); /* Stronger purple shadow on hover */
    }

    .form-group {
        margin-bottom: 25px;
    }

    .form-control {
        border: 1px solid #d3c1db;
        border-radius: 8px;
        padding: 12px;
        font-size: 1rem;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
        background: #fdfbff; /* Slightly off-white */
    }

    .form-control:focus {
        border-color: #a277a6;
        box-shadow: 0 0 8px rgba(162, 119, 166, 0.3);
        outline: none;
    }

    .btn-primary {
        background: #a277a6; /* Given purple */
        border: none;
        border-radius: 8px;
        padding: 12px 30px;
        font-size: 1.05rem;
        font-weight: 600;
        transition: background 0.3s ease, transform 0.3s ease;
        width: 100%;
    }

    .btn-primary:hover {
        background: #8b5b8f; /* Darker purple on hover */
        transform: translateY(-2px);
    }

    .alert {
        background: #f7eef9;
        color: #3b2060;
        padding: 20px;
        border-radius: 10px;
        text-align: center;
        font-size: 1.05rem;
        border: 1px solid #d3c1db;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
        margin-bottom: 30px;
    }

    /* Animations */
    @@keyframes fadeIn {
         from {
             opacity: 0;
             transform: translateY(20px);
         }
         to {
             opacity: 1;
             transform: translateY(0);
         }
     }
</style>

<div class="container">
    <h2>Select Payment Method</h2>

    <div class="payment-form-card">
        @if (TempData["Error"] != null)
        {
        <div class="alert">@TempData["Error"]</div>
        }

        <form asp-action="SelectPayment" method="post">
            <div class="form-group">
                <label for="paymentMethod">Payment Method</label>
                <select name="paymentMethod" class="form-control" required>
                    <option value="" disabled selected>Select a payment method</option>
                    @foreach (var method in ViewBag.PaymentMethods)
                    {
                    <option value="@method">@method</option>
                    }
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Continue</button>
        </form>
    </div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}