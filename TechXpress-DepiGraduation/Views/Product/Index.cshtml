@model IEnumerable<Product>
<!DOCTYPE html>

<html>
<head>
    <title>TechXpress</title>
    
</head>
<body>
<div>
    <div>
        <a asp-action="Index" ></a>
    </div>
    <div class="row row-cols-2 row-cols-md-3 row-cols-lg-4 g-4">
        @foreach (var p in Model)
        {
            <div class="card" style="width: 18rem;">
                <a asp-action="Details" asp-route-id="@p.Id" class="text-decoration-none">
                    <img class="card-img-top" src="~/images/@p.Image" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">@p.Name</h5>
                        <p class="card-text">@(string.Join(" ", p.Description.Split(' ').Take(10)))...</p>
                        <p class="card-text m-2 fs-2 fw-bold ">@p.Price</p>
                    </div>
                 </a>
                    <form asp-controller="Order" asp-action="AddToCart" asp-route-id="@p.Id" method="post" style="padding: 0 1rem 1rem 1rem;">
                        <input type="hidden" name="productId" value="@p.Id" />
                        <button type="submit" class="btn" style="background-color: #7B61FF; color: white;  width: 100%; border-radius: 20px; padding: 0.5rem 1rem;">
                            <i class="fas fa-cart-plus me-1"></i> Add to Cart
                        </button>
                    </form>
            </div>
        }
        <a asp-action="Create" class="btn btn-primary col-1">
            <svg xmlns="http://www.w3.org/2000/svg"  height="16" fill="currentColor" class=" bi bi-plus-square align-self-center" viewBox="0 0 16 16">
                <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2z"/>
                <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4"/>
            </svg>
        </a>

    </div>

</div>
</body>
</html>